import java.awt.*;
public class Ball {
	
	
	public Ball (Game game){
		
	}
	
	private void moveBall() {
		if(x + moveX <=0)
			moveX = 1;
		if(x + moveX > getWidth() - d)
			moveX = -1;
		if(y + moveY <0)
			moveY = 1;
		if(y + moveY > getHeight() - d)
			moveY = -1;
		
		x += moveX;
		y += moveY;
	}

}
